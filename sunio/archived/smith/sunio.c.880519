			if (pad_records < 0)
			    reclen = rsize;
			perblock = reclen/(dsize*lsize);
			if (perblock)
			    xlines = (nlines+perblock-1)/perblock*perblock;
			else
			    xlines = nlines;
			padding = ((xlines + BLKFACTOR - 1)/BLKFACTOR * BLKFACTOR - xlines) * (dsize*lsize);
		    } else {
			padding = ((nlines + BLKFACTOR - 1)/BLKFACTOR * BLKFACTOR - nlines) * (dsize*lsize);
		    }
		    if (tapen) {
			sprintf(hfile,"H%03d,%02d-%02d-%02d:%02d:%02d:%02d.%03d",
				tapen,year,month,day,hour,minute,second,tick);
		    } else {
			sprintf(hfile,"H%02d-%02d-%02d:%02d:%02d:%02d.%03d",
				year,month,day,hour,minute,second,tick);
