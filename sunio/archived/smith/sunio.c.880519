				    nbytes,rem,n,recno);
			perror("sunio");
			exit (2);
		    }
#ifdef alliant
		    vec_bmov_s(obuff+1,buff,n,2,2);
		    vec_bmov_s(obuff,buff+1,n,2,2);
#else 
		    for (p = buff,q = obuff; p < buff+n;) {
			q[1] = *p++;
			*p++ = *q++;
			q++;
		    }
#endif alliant
		    if ((*t_write)(tapefd, obuff, n) <= 0) {
			fprintf (stderr, "sunio: tape write error #%d in %s\n",
				 errno, nrtape);
			perror("sunio");
			exit (2);
		    }
		    rem -= nbytes;
		    recno ++;
		}
		close(diskfd);
		filen ++;
		recno = 0;
	    } else {
		close (diskfd);
		(*t_close)(tapefd);
		filen ++;
